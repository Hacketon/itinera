<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.itinera.itineramobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/itinera"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.itinera.itineramobile.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.MenuPrincipal"
            android:label="@string/title_activity_menu_principal" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.MenuConsultas"
            android:label="@string/title_activity_menu_consultas" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.MenuDespesas"
            android:label="@string/title_activity_menu_despesas" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.CadastroDespesa"
            android:label="@string/title_activity_cadastro_despesa" >
        </activity>
        <activity
            android:name="br.com.itinera.itineramobile.PesquisarDespesa"
            android:label="@string/title_activity_pesquisar_despesa" >
        </activity>
    </application>

</manifest>
