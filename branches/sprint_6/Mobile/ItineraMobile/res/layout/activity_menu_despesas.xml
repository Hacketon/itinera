<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuDespesas" >

    <TextView
        android:id="@+id/txtMenuDespesasDataAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtMenuDespesasSaudacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMenuDespesasDataAtual"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtMenuDespesasDataAtual"
        android:layout_marginTop="14dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btnMenuDespesasCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMenuDespesasSaudacao"
        android:layout_alignRight="@+id/txtMenuDespesasSaudacao"
        android:layout_below="@+id/txtMenuDespesasSaudacao"
        android:layout_marginTop="34dp"
        android:background="@layout/layout_botao_padrao"
        android:text="@string/menu_despesa_cadastrar" />

    <Button
        android:id="@+id/btnMenuDespesasPesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMenuDespesasCadastrar"
        android:layout_alignRight="@+id/btnMenuDespesasCadastrar"
        android:layout_below="@+id/btnMenuDespesasCadastrar"
        android:layout_marginTop="21dp"
        android:background="@layout/layout_botao_padrao"
        android:text="@string/menu_despesa_pesquisar" />

</RelativeLayout>