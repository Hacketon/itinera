<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuPrincipal" >

    <Button
        android:id="@+id/btnMenuConsultas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtSaudacao"
        android:layout_marginTop="62dp"
        android:background="@color/botao_entrar"
        android:text="@string/consultas" />

    <Button
        android:id="@+id/btnMenuDespesas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMenuConsultas"
        android:layout_alignRight="@+id/btnMenuConsultas"
        android:layout_below="@+id/btnMenuConsultas"
        android:layout_marginTop="28dp"
        android:background="@color/botao_entrar"
        android:text="@string/despesas" />

    <Button
        android:id="@+id/btnMenuVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMenuDespesas"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnMenuDespesas"
        android:layout_marginBottom="25dp"
        android:background="@color/botao_entrar"
        android:text="@string/voltar" />

    <TextView
        android:id="@+id/txtSaudacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnMenuConsultas"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtMenuDataAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSaudacao"
        android:layout_alignLeft="@+id/txtSaudacao"
        android:layout_marginBottom="27dp"
        android:text="TextView" />

</RelativeLayout>
